<Window x:Class="MyMarkdownEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMarkdownEditor"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="無題 - My Markdown Editor"
        Height="600" Width="900"
        Closing="Window_Closing">

    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Control" Command="{Binding NewCommand}" />
        <KeyBinding Key="O" Modifiers="Control" Command="{Binding OpenCommand}" />
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveCommand}" />
    </Window.InputBindings>

    <DockPanel>
        <!-- ステータスバー -->
        <StatusBar DockPanel.Dock="Bottom" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="文字数: 0 / 行数: 0" />
            </StatusBarItem>
        </StatusBar>

        <!-- エディタエリア -->
        <avalonEdit:TextEditor
            x:Name="TextEditor"
            FontFamily="Meiryo UI"
            FontSize="12"
            ShowLineNumbers="True"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"
            TextChanged="TextEditor_TextChanged" />
    </DockPanel>
</Window>
